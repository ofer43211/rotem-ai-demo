{
  "name": "rotem-ai-demo",
  "version": "1.0.0",
  "description": "A comprehensive demo project with testing best practices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:performance": "jest --testPathPattern=tests/performance --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "lint": "eslint src tests examples --ext .ts",
    "lint:fix": "eslint src tests examples --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run format:check && npm run test",
    "clean": "rm -rf dist coverage",
    "clean:all": "rm -rf dist coverage node_modules",
    "examples": "ts-node examples/basic-usage.ts",
    "docker:build": "docker build -t rotem-ai-demo .",
    "docker:run": "docker run -p 3000:3000 rotem-ai-demo",
    "docker:dev": "docker-compose up app-dev"
  },
  "keywords": [
    "demo",
    "testing",
    "typescript",
    "jest"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.1",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
